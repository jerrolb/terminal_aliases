# Git
alias gd='git diff'
alias gdo='git diff origin'
alias gds='git diff --staged'
alias gdt='git difftool'
alias gdts='git difftool --staged'

alias gf='git fetch'
alias gfo='git fetch origin'
alias gst='git status'

alias gsh='git stash'
alias gshm='git stash -m'
alias gshp='git stash pop'
alias gsha0='git stash apply stash@{0}'
alias gsha1='git stash apply stash@{1}'
alias gshl='git stash list'
alias gshc='git stash clear'
alias gshd0='git stash drop stash@{0}'
alias gshd1='git stash drop stash@{1}'
alias gshs0='git stash show -p stash@{0}'
alias gshs1='git stash show -p stash@{1}'

alias gr='git restore'
alias grs='git restore --staged'

alias grb='git rebase'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'
alias grbi='git rebase -i'

alias gch='git checkout'
alias gcha='git checkout .'
alias gchb='git checkout -b'

alias ga='git add'
alias gaa='git add .'
alias gap='git add -p'

alias gb='git branch'
alias gbm='git branch -m'
alias gbd='git branch -d'
alias gbD='git branch -D'

alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gca='git commit --amend'
alias gcan='git commit --amend --no-edit'
alias gcaem='git commit --allow-empty -m'

alias gps='git push'
alias gpsf='git push -force-with-lease'
alias gpso='git push origin'
alias gpsfo='git push --force-with-lease origin'

alias gpl='git pull'
alias gplo='git pull origin'

alias gget='git fetch origin dev && git rebase origin/dev'

alias gl='git log'
alias glo='git log --oneline'
alias gla='git log -1 HEAD'

alias gra='git reset HEAD --'
alias grl='git reset HEAD^'
alias grh~='git reset HEAD~'

alias gr='git remote'
alias grso='git remote show origin'
alias grao='git remote add origin'

alias gs='git show'

alias gbs='git bisect start'
alias gbr='git bisect reset'
alias gbg='git bisect good'
alias gbb='git bisect bad'

alias gmb='git merge-base'
alias gy='git apply'

# NPM
alias npms='npm start'
alias npmr='npm run'
alias bnpms='BROWSER=none npm start'
alias npmu='npm uninstall'
alias npml='npm list'
alias npmc='npm cache'
alias npmcv='npm cache verify'
alias npmcvf='npm cache verify -force'
alias npmis='npm install --save-dev'
alias npmi='npm install'

alias gcl='git clean'
alias gcln='git clean -nd'
alias gclf='git clean -fd'

# Jest
alias jw='jest --watch'
alias jc='jest --coverage'
alias jwc='jest --watch --coverage'
